	public String getTable(BufferedReader br)throws IOException{
		// read first line
		// read next line
		// analyze the line
		// until you find table name:
		// reset bufferReader to 11 position back
		br.mark(1);
		if(br.read()!=-1){
			br.reset();
			boolean foundNextTable = false;
			StringBuilder sb = new StringBuilder();
			br.readLine();
			while(foundNextTable != true){
				String line = br.readLine();
				line.matches("(?i).*Table name:.*");
				}
			}
		else{
			
		}
		return null;
	}

	
	
	
	public String getTableName(String line, BufferedReader br) throws IOException{
		StringBuilder sb = new StringBuilder();
		for(int i = 11; i<line.length();i++){
			if(line.charAt(i)==32){
			} 
			else{
				sb.append(line.charAt(i));
			}
		}
		return sb.toString();
	}
